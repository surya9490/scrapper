# Database Configuration
# Option 1: Local PostgreSQL (current setup)
DATABASE_URL=postgresql://postgres:password@localhost:5432/productdb

# Option 2: Supabase (recommended for production)
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
# SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
# SUPABASE_ANON_KEY=[YOUR-ANON-KEY]
# SUPABASE_SERVICE_ROLE_KEY=[YOUR-SERVICE-ROLE-KEY]

# Redis Configuration (local installation)
REDIS_URL=redis://localhost:6379

# OpenAI API Configuration (optional if using HuggingFace Router)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=2000




# HuggingFace Router API Configuration (alternative to OpenAI)
# At least one of OPENAI_API_KEY or HUGGINGFACE_API_KEY must be set
HUGGINGFACE_API_KEY=hf-your-huggingface-api-key-here
# Optional: override defaults used by the service
HUGGINGFACE_CHAT_MODEL=MiniMaxAI/MiniMax-M2
HUGGINGFACE_EMBEDDING_MODEL=jinaai/jina-embeddings-v3-base-en




# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=read_products,write_products,read_orders,read_price_rules,write_price_rules
SHOPIFY_HOST_NAME=your-app-domain.com
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# Server Configuration
PORT=4000
NODE_ENV=development
HOST=0.0.0.0

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
MAX_SKUS_PER_UPLOAD=500

# Scraping Configuration
SCRAPING_DELAY=1000
MAX_CONCURRENT_SCRAPES=5
SCRAPING_TIMEOUT=30000
USER_AGENT=Mozilla/5.0 (compatible; ProductMapper/1.0)

# Price Monitoring Configuration
PRICE_CHECK_INTERVAL=3600000
MAX_PRICE_HISTORY_DAYS=365
SIGNIFICANT_PRICE_CHANGE_THRESHOLD=5

# Job Queue Configuration
QUEUE_CONCURRENCY=3
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# AI Matching Configuration
SIMILARITY_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.8
MAX_SEARCH_RESULTS=20

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Advanced Rate Limiting (Redis-backed)
RATE_LIMIT_BYPASS_KEY=your-internal-api-key-here
DASHBOARD_RATE_LIMIT_MAX=600
SCRAPING_RATE_LIMIT_MAX=30
UPLOAD_RATE_LIMIT_MAX=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
JWT_SECRET=your-jwt-secret-key
CORS_ORIGIN=http://localhost:3000

# External APIs
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# Scraper Configuration
MAX_CONCURRENCY=5
WORKER_CONCURRENCY=3
PRICE_CHECK_CRON="0 */6 * * *"
TIMEZONE="UTC"

# Development Tools (optional)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# Security (add in production)
# JWT_SECRET=your-jwt-secret-here
# API_KEY=your-api-key-here

# External Services (optional)
# PINECONE_API_KEY=your-pinecone-key
# PINECONE_ENVIRONMENT=your-pinecone-env